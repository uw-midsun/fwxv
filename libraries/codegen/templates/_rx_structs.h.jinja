{% set board = data["Board"] -%}
{% set messages = data["Messages"] | selectattr("receiver", "contains", board) | list -%}

#pragma once

#include <stdint.h>
#include <stdbool.h>
#include "can_watchdog.h"

{% for message, message_data in messages.items() %}
  {%- if message_data["target"][board]["watchdog"] != 0 %}
#define check_{{message}}_msg_watchdog() \
    s_{{message}}_msg_watchdog.missed
  {%- endif %}
{%- endfor %}

typedef struct
{
{%- for message in messages %}
    {%- for signal in message.signals %}
    uint{{signal.length}}_t {{message.name}}_{{signal.name}};
    {%- endfor %}
{%- endfor %}
{%- for message in messages %}
    bool received_{{message.name}};
{%- endfor %}
} {{board}}_rx_struct;

{%- for message, message_data in messages.items() %}
  {% if message_data["target"][board]["watchdog"] != 0 %}
extern CanWatchDog s_{{message}}_msg_watchdog;
  {%- endif %}
{%- endfor %}
